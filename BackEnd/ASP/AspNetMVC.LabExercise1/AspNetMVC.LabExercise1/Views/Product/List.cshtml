@using AspNetMVC.LabExercise1.Models
@using System.Collections.Generic;
@{
    var products = ViewData["Products"] as List<Product>;
    var grandTotal = ViewData["GrandTotal"];
}
<div>
    <table class="table table-primary table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
        </tr>
        @foreach(var product in products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Quantity</td>
                <td>@string.Format("{0:₱#,##0.00;(₱#,##0.00);''}", @product.Price)</td>
                <td>@string.Format("{0:₱#,##0.00;(₱#,##0.00);''}", @product.TotalPrice)</td>
            </tr>
        }        
        <tr>
            <td colspan="4"></td>
            <th>Grand Total:</th>
            <td>@string.Format("{0:₱#,##0.00;(₱#,##0.00);''}", @grandTotal)</td>
        </tr>
    </table>
</div>